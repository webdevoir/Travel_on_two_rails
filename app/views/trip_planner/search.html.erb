<div class="container">
  <div class="row">
    <div class="col-sm-12">
      <h3>Found trips</h3>
    </div>
      <% @found_trips.each do |found_trip| %>
      <% trip_owner = found_trip.user %>
      <div class="col-sm-12 user-search-column">
        <div class="row">
          <div class="col-sm-3">
            <% if trip_owner.avatar_url == nil %>
                <a href="http://placehold.it" class="profile-image"><img src="http://placehold.it/150x150/FFC0CB/000000"></a>
            <% else %>
                <%= image_tag trip_owner.avatar.thumb.url, :class => "user-cover-photo img-rounded" %>
            <% end %>
          </div>
          <div class="col-sm-3">
            <h1><%= link_to found_trip.trip_name, trip_planner_path(found_trip) %></h1>
          </div>
          <div class="col-sm-5 col-sm-offset-1">
            <p>
              some blog stuff it would be cool if this gave a bit on the very last post the user made
            </p>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
