<%= javascript_include_tag "trip_planner" %>
<script
 src="https://maps.googleapis.com/maps/api/js?key=<%= ENV['GOOGLE_MAPS_API'] %>&libraries=geometry">
</script>
<div id="wrapper">
  <div id="sidebar-wrapper">
    <ul class="sidebar-nav">
      <li class="sidebar-brand"><a href="<%= trip_path(@trip) %>">Back to trip</a></li>
      <% @posts.each_with_index do |post, index| %>
        <% if index == 0 %>
        <li class="<%="#{post.id}" %> sidebar-active-item"><a href="<%= trip_fetch_post_planer_url(@trip, post) %>" class="post-sidebar-item trip-planner-sidebar-item" data-value="<%= post.id %>" data-lat="<%= post.center_lat %>" data-lng="<%= post.center_lng %>"><%= "#{post.post_group.month} #{post.day}" %></a></li>
        <% else %>
        <li class="<%= post.id %>"><a href="<%= trip_fetch_post_planer_url(@trip, post) %>" class="post-sidebar-item trip-planner-sidebar-item" data-value="<%= post.id %>" data-lat="<%= post.center_lat %>" data-lng="<%= post.center_lng %>"><%= "#{post.post_group.month} #{post.day}" %></a></li>
        <% end %>
      <% end %>
    </ul>
  </div>
  <div id="page-content-wrapper trip-planer">
    <div class="container-fluid trip-planer">
      <div class="row">
        <div class="col-lg-12">
          <div id="map-trip-planner">

          </div>
          <div id="post-container">
            <%= render 'post' %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
