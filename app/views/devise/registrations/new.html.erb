<div id="wrapper-reg">
  <div class="container container-table <%= css_slug %>">
    <div class="row vertical-center-row <%= css_slug %>">
      <div class="registration-wrapper">
        <div class="col-title">
          <h1>Join Our Community</h1>
        </div>
        <hr class="title-divider">
        <div class="sign_form">
          <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
            <%= f.error_notification %>
            <div class="form-group col-submit">
              <div class="field-title">
                <%= f.input :email, required: true, autofocus: true %>
              </div>
            </div>
            <div class="form-group col-submit">
              <div class="field-title">
                <%= f.input :name, required: true, autofocus: true %>
              </div>
            </div>
            <div class="form-group col-submit">
              <div class="field-title">
                <%= f.input :password, required: true, hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length) %>
              </div>
            </div>
            <div class="form-group col-submit">
              <div class="field-title">
                <%= f.input :password_confirmation, required: true %>
              </div>
            </div>
            <a href="/users/auth/google_oauth2">Sign in with Google</a>
            <p>By clicking Create User, you agree to our <%= link_to "Terms and Conditions", terms_path %></p>
            <div class="col-bottom">
              <div class="action">
                <%= f.button :submit, :class => "btn btn-primary btn-lg sharp btn-reg"%>
              </div>
              <%= render "devise/shared/links" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
