<h1>Trips Search</h1>

<%= form_for search_path, method: :get do |f| %>
  <p>
    <%= f.label "Search for" %>
    <%= text_field_tag :q, params[:q] %>
    <%= submit_tag "Go", name: nil %>
  </p>
<% end %>

<ul>
  <% @users.each do |user| %>
    <li>
      <h3>
        <%= link_to user.name, controller: "users", action: "show", id: user.id %>
      </h3>
    </li>
  <% end %>
</ul>
