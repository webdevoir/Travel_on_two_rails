<script
 src="https://maps.googleapis.com/maps/api/js?key=<%= ENV['GOOGLE_MAPS_API'] %>&libraries=geometry">
</script>
<%= javascript_include_tag "trip_planner" %>
<%= hidden_field_tag "trip_id", @trip.id %>
<div id="wrapper">
  <div id="sidebar-wrapper">
    <ul class="sidebar-nav">
      <li class="sidebar-brand"><a href="<%= trip_path(@trip) %>">Back to trip</a></li>
      <% @posts.each_with_index do |post, index| %>
        <% if index == 0 %>
        <li class="<%="#{post.id}" %> sidebar-active-item"><a href="<%= trip_fetch_post_url(@trip, post) %>" class="post-sidebar-item trip-planner-sidebar-item" data-value="<%= post.id %>" data-lat="<%= post.center_lat %>" data-lng="<%= post.center_lng %>"><%= "#{post.post_group.month} #{post.day}" %></a></li>
        <% else %>
        <li class="<%= post.id %>"><a href="<%= trip_fetch_post_url(@trip, post) %>" class="post-sidebar-item trip-planner-sidebar-item" data-value="<%= post.id %>" data-lat="<%= post.center_lat %>" data-lng="<%= post.center_lng %>"><%= "#{post.post_group.month} #{post.day}" %></a></li>
        <% end %>
      <% end %>
    </ul>
  </div>
  <div id="page-content-wrapper">
    <div class="container-fluid">
      <div class="row post-group-row">
        <div class="col-lg-12">
          <a href="#menu-toggle" class="btn btn-default" id="menu-toggle">Toggle Navigation</a>
          <div class="align-left-button">
            <% unless @min_post_group == nil %>
              <%= button_to "Back to #{@min_post_group.month}", trip_post_group_path(@trip, @min_post_group), :class => "btn btn-warning sharp", :method => :get %>
            <% end %>
          </div>
          <div class="align-right-button">
            <% unless @max_post_group == nil %>
              <%= button_to "Next to #{@max_post_group.month}", trip_post_group_path(@trip, @max_post_group), :class => "btn btn-warning sharp", :method => :get %>
            <% end %>
          </div>
          <%= link_to "Back to Trip", trip_path(@trip), :class => "back-to-trip-link" %>
          <div id="map-trip-planner">

          </div>
          <div id="post-container">
            <%= render 'post' %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
