<div id="wrapper">
  <div id="sidebar-wrapper">
    <ul class="sidebar-nav">
      <li class="sidebar-brand"><a href="#"><%= @post_group.month %></a></li>
      <% @posts.each_with_index do |post, index| %>
        <% if index == 0 %>
        <li class="<%= post.day %> sidebar-active-item"><a href="<%= trip_fetch_post_url(@trip, post) %>" class="post-sidebar-item" data-value="<%= post.id %>"><%= "#{@post_group.month} #{post.day}" %></a></li>
        <% else %>
        <li class="<%= post.day %>"><a href="<%= trip_fetch_post_url(@trip, post) %>" class="post-sidebar-item" data-value="<%= post.id %>"><%= "#{@post_group.month} #{post.day}" %></a></li>
        <% end %>
      <% end %>
    </ul>
  </div>
  <div id="page-content-wrapper">
    <div class="container-fluid">
      <div class="row post-group-row">
        <div class="col-lg-12">
          <h1>Side-bar-template</h1>
          <a href="#menu-toggle" class="btn btn-default" id="menu-toggle">Toggle Menu</a>
          <% unless @max_post_group == nil %>
          <%= link_to "Back to #{@max_post_group.month}", trip_post_group_path(@trip, @max_post_group) %>
          <% end %>
          <% unless @min_post_group == nil %>
          <%= link_to "Next to #{@min_post_group.month}", trip_post_group_path(@trip, @min_post_group) %>
          <% end %>
          <div id="post-container">
            <%= render 'post' %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
