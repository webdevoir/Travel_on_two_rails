<div class="container">
  <div class="row">
    <% @saved_routes.each do |route| %>
      <div class="col-sm-12">
        <div class="row">
          <div class="col-sm-4">
            <div class="user-thumb-image">
              <a href="<%= route_path(route) %>" class="profile-image"><%= image_tag "missing.png", :class=> "img-thumbnail" %></a>
            </div>
          </div>
          <div class="col-sm-7 col-sm-offset-1">
            <h3>
              <%= link_to route.address1, controller: "saved_routes", action: "show", id: route.id %>
            </h3>
            <div class="user-description">
              <p>ROUTE</p>
            </div>
            <div class="user-description">
              <p><%= route.address1 %>, <%= route.address2 %></p>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
