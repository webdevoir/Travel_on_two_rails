<!DOCTYPE html>
<html class="<%= css_slug %>">
  <head>
    <title>TravelOnTwo</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body class="<%= css_slug %>">
    <!--start of navbar-->
    <nav class="navbar navbar-inverse <%= css_slug %>">
      <div class="container-fluid">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#myNavbar">
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <a class="navbar-brand" href="<%= root_url %>">Travel on Two</a>
        </div>
        <div class="collapse navbar-collapse" id="myNavbar">
          <ul class="nav navbar-nav navbar-right <%= css_slug %>">
            <% if current_user %>
              <li><a href="#">Hi <%= current_user.name %></a></li>
              <li><a href="/sessions/current" data-method="delete"><span class="glyphicon glyphicon-log-out"></span> Log out</a></li>
            <% else %>
              <li><a href="/users/new"><span class="glyphicon glyphicon-user"></span> Sign Up</a></li>
              <!--start dropdown menu  -->
              <li class="dropdown">
                <a href="#" class="dropdown-toggle" data-toggle="dropdown"><span class="glyphicon glyphicon-log-in"></span> Login <b class="caret"></b></a>
                <ul class="dropdown-menu" style="padding: 15px;min-width: 250px;">
                  <li>
                    <div class="row">
                      <div class="col-md-12">
                        <%= form_tag sessions_path, class: "form-for-popup" do %>
                          <div class="form-group">
                            <%= label_tag :email, "Email address?", class: "sr-only" %>
                            <!-- <label class="sr-only" for="exampleInputEmail2">Email address</label> -->
                            <%= text_field_tag :email, params[:email], placeholder: 'Email address', class: "form-control" %>
                            <!-- <input type="email" class="form-control" id="exampleInputEmail2" placeholder="Email address"> -->
                          </div>
                          <div class="form-group">
                            <%= label_tag :password, "Password?", class: "sr-only" %>
                            <!-- <label class="sr-only" for="exampleInputPassword2">Password</label> -->
                            <%= password_field_tag :password, nil, placeholder: 'Password', class: "form-control" %>
                            <!-- <input type="password" class="form-control" id="exampleInputPassword2" placeholder="Password"> -->
                          </div>
                          <div class="checkbox">
                            <label>
                              <input type="checkbox"> Remember me
                            </label>
                          </div>
                          <div class="form-group">
                            <%= submit_tag "Log in" %>
                          </div>
                        <% end %>
                      </div>
                    </div>
                  </li>
                </ul>
              </li>
            <% end %>
            <li>
              <%= form_tag(blogs_path, method: 'get', class: 'navbar-form navbar-left') do %>
                <%= search_field_tag 'search', nil, class: 'form-control', placeholder: 'Search For a Blog'  %>
                <%= submit_tag "Search", class: 'btn btn-primary btn-sm outline', :name => nil %>
              <% end %>
            </li>
          </ul>
        </div>
      </div>
    </nav>
    <!--end of nav bar -->
    <%= yield %>

  </body>
</html>
