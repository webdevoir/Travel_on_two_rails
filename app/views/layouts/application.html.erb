<!DOCTYPE html>
<html class="<%= css_slug %>">
  <head>
    <title>Travel On Two</title>
    <%= include_gon %>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>

    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <link rel="stylesheet" type="text/css" href="//cdn.jsdelivr.net/jquery.slick/1.6.0/slick.css"/>
    <link rel="stylesheet" type="text/css" href="https://kenwheeler.github.io/slick/slick/slick-theme.css"/>
    <link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet" integrity="sha384-wvfXpqpZZVQGK6TAh5PVlGOfQNHSoD2xbE+QkPxCAFlNEevoEH3Sl0sibVcOQVnN" crossorigin="anonymous">
    <script type="text/javascript" src="//cdn.jsdelivr.net/jquery.slick/1.6.0/slick.min.js"></script>
    <script src="https://cdn.rawgit.com/kimmobrunfeldt/progressbar.js/0.5.6/dist/progressbar.js"></script>
    <script src="https://js.stripe.com/v2/" type="text/javascript"></script>
    <script type="text/javascript">
      Stripe.setPublishableKey("<%= ENV['STRIPE_PUBLISHABLE_KEY'] %>");
    </script>
  </head>

  <body class="<%= css_slug %>">
    <!--start of navbar-->
    <% if css_slug == "post_groups-show" %>
    <nav class="navbar navbar-inverse <%= css_slug %> navbar-fixed-top">
    <% else %>
    <nav class="navbar navbar-inverse <%= css_slug %>">
    <% end %>
      <div class="container-fluid">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#myNavbar">
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <a class="navbar-brand" href="<%= root_url %>">Travel on Two</a>
        </div>
        <div class="collapse navbar-collapse" id="myNavbar">
          <ul class="nav navbar-nav navbar-right <%= css_slug %>">
            <% if current_user %>
              <li><a href="<%= user_path(current_user) %>"><span class="	glyphicon glyphicon-user"></span> Profile</a></li>
              <% if @read == false %>
                <li><a href="<%= conversations_path %>"><span class="glyphicon glyphicon-envelope"></span> Messages</a></li>
              <% else %>
                <li><a href="<%= conversations_path %>"><span class="glyphicon glyphicon-envelope"></span><i class="fa fa-asterisk asterisk-nav"></i> Messages</a></li>
              <% end %>
              <li><a href="<%= user_followed_blogs_path(current_user) %>"><span class="glyphicon glyphicon-list-alt"></span> Followed Users</a></li>
              <li class="dropdown">
                <a href="#" class="dropdown-toggle" data-toggle="dropdown"> Settings <b class="caret"></b></a>
                <ul class="dropdown-menu">
                  <li><a href="#"><span class="glyphicon glyphicon-cog"></span> Manage User Settings</a></li>
                  <li><a href="<%= user_path(current_user) %>"><span class="glyphicon glyphicon-user"></span> Manage Trips</a></li>
                  <li><a href="<%= about_path %>"><span class="glyphicon glyphicon-question-sign"></span> About</a></li>
                  <li><a href="<%= destroy_user_session_path %>" data-method="delete"><span class="glyphicon glyphicon-log-out"></span> Log out</a></li>
                </ul>
              </li>
            <% else %>
              <li><a href="<%= about_path %>"><span class="glyphicon glyphicon-question-sign"></span> About</a></li>
              <li><a href="<%= new_user_registration_path %>"><span class="glyphicon glyphicon-user"></span> Sign Up</a></li>
              <!--start dropdown menu  -->
              <li class="dropdown">
                <a href="#" class="dropdown-toggle" data-toggle="dropdown"><span class="glyphicon glyphicon-log-in"></span> Login <b class="caret"></b></a>
                <ul class="dropdown-menu" style="padding: 15px;min-width: 250px;">
                  <li>
                    <div class="row">
                      <div class="col-md-12">
                        <%= form_for(:user, :url => session_path(:user), class: "form-for-popup") do |f| %>
                          <div class="form-group">
                            <%= f.label :email, "Email address?", class: "sr-only" %>
                            <!-- <label class="sr-only" for="exampleInputEmail2">Email address</label> -->
                            <%= f.text_field :email, placeholder: 'Email address', class: "form-control" %>
                            <!-- <input type="email" class="form-control" id="exampleInputEmail2" placeholder="Email address"> -->
                          </div>
                          <div class="form-group">
                            <%= f.label :password, "Password?", class: "sr-only" %>
                            <!-- <label class="sr-only" for="exampleInputPassword2">Password</label> -->
                            <%= f.password_field :password, placeholder: 'Password', class: "form-control" %>
                            <!-- <input type="password" class="form-control" id="exampleInputPassword2" placeholder="Password"> -->
                          </div>
                          <div class="checkbox">
                            <%# f.check_box :remeber_me %>
                            <%# f.label :remeber_me %>
                          </div>
                          <div class="form-group">
                            <%= submit_tag "Log in" %>
                          </div>
                        <% end %>
                      </div>
                    </div>
                  </li>
                </ul>
              </li>
            <% end %>
            <li class="search-bar">
              <%= form_tag(search_path, method: 'get', class: 'navbar-form navbar-left') do %>
                <%= search_field_tag 'q', nil, class: 'form-control', placeholder: 'Search For a Blog' %>
                <%= submit_tag "Search", class: 'btn btn-primary btn-sm outline', :name => nil %>
              <% end %>
            </li>
            <li class="search-button"><a href="<%= search_path %>"><span class="glyphicon glyphicon-search"></span> Search</a></li>
          </ul>
        </div>
      </div>
    </nav>
    <!--end of nav bar -->

    <% if flash[:notice] %>
      <div class="notice-container">
        <div class="notice"><%= flash[:notice] %></div>
      </div>
      <script type="text/javascript">
        $(document).ready(function(){
          $(".notice-container").fadeOut(3000);
        });
      </script>
    <% elsif flash[:error] %>
      <div class="notice-container">
        <div class="error"><%= flash[:error] %></div>
      </div>
      <script type="text/javascript">
        $(document).ready(function(){
          $(".notice-container").fadeOut(3000);
        });
      </script>
    <% end %>
    <%= yield %>
  </body>
</html>
