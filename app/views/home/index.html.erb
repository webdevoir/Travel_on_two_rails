<div id="<%= css_slug %>">
  <header class="masthead">
    <div class="header-content">
      <div class="header-content-inner">
        <% if current_user %>
          <h1 id="homeHeading">Welcome to our community</h1>
          <hr>
          <p>We'll help you plan your trip, fund it, and share it with the world.</p>
          <!-- <%# button_to('Go To Your Page', user_path(@user_id), :class => 'btn btn-warning btn-lg btn-secondary sharp', :method => :get) %> -->
          <div class="button-group">
            <%= button_to('Go To Your Page', user_path(@user_id), :class => 'btn btn-primary btn-xl ', :method => :get) %>
            <button type="button" name="button" class="btn btn-primary btn-xl" data-toggle="modal" data-target="#trip_explorer_modal">Search Trips</button>
          </div>
        <% else %>
          <h1 id="homeHeading">START YOUR TOURING ADVENTURE NOW</h1>
          <hr>
          <p>We'll help you plan your trip, fund it, and share it with the world.</p>
          <!-- <%# button_to('Sign Up Now', new_user_registration_path, :class => 'btn btn-warning btn-lg btn-secondary sharp', :method => :get) %> -->
          <div class="button-group">
            <%= button_to('Sign Up Now', new_user_registration_path, :class => 'btn btn-primary btn-xl', :method => :get) %>
            <button type="button" name="button" class="btn btn-primary btn-xl" data-toggle="modal" data-target="#trip_explorer_modal">Search Trips</button>
          </div>
        <% end %>
      </div>
    </div>
  </header>
  <%= render "trip_explorer_modal" %>

  <section class="bg-primary" id="about">
    <div class="container new-trips-container">
      <div class="row">
        <div class="col-lg-12 text-center">
          <h1>Current Trips</h1>
          <div class="trip-carousel">
            <% @featured_trips.each_with_index do |trip, index| %>
              <div class="trip-slider-<%= trip.id %> trip-slider" data-trip-id=<%= trip.id %>>
                <% if trip.photo.url != nil %>
                  <style media="screen">
                    .trip-slider-<%= trip.id %> {
                      background-image: url(<%= trip.photo.url %>)
                    }
                  </style>
                <% else %>
                <style media="screen">
                  .trip-slider-<%= trip.id %> {
                    background-image: url(<%= asset_url("#{(index + 1).to_s}.jpg") %>)
                  }
                </style>
                <% end %>
                <h2><a href="<%= trip_path(trip) %>" class="trip-link">View <%= trip.user.name %>'s Trip</a></h2>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </section>

  <section id="services">
    <div class="container">
      <div class="row">
        <div class="col-lg-12 text-center">
          <h2 class="section-heading">We Support You.</h2>
          <hr class="primary">
        </div>
      </div>
    </div>
    <div class="container">
      <div class="row">
        <div class="col-lg-3 col-md-6 text-center">
          <div class="service-box">
            <i class="fa fa-4x fa-bicycle text-primary sr-icons"></i>
            <h3>Built for Cyclists</h3>
            <p class="text-muted">Built by cyclists for cyclists, Travel on Two strives to help you get from planning to sharing faster.</p>
          </div>
        </div>
        <div class="col-lg-3 col-md-6 text-center">
          <div class="service-box">
            <i class="fa fa-4x fa-usd text-primary sr-icons"></i>
            <h3>Raising Money</h3>
            <p class="text-muted">Travel on Two gives you the tools to raise money for your trip, for charity or for personal reasons.</p>
          </div>
        </div>
        <div class="col-lg-3 col-md-6 text-center">
          <div class="service-box">
            <i class="fa fa-4x fa-map-marker text-primary sr-icons"></i>
            <h3>Chart Your Route Accuratly</h3>
            <p class="text-muted">Download our app to chart your daily ride to get the most accurate distance measurments, time on bike, elevation and more.</p>
          </div>
        </div>
        <div class="col-lg-3 col-md-6 text-center">
          <div class="service-box">
            <i class="fa fa-4x fa-envelope text-primary sr-icons"></i>
            <h3>Connect With Others</h3>
            <p class="text-muted">Message other users to ask questions about their trip and expeirence.</p>
          </div>
        </div>
      </div>
    </div>
  </section>

