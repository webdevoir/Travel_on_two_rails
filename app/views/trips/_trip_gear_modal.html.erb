<a href="#" data-toggle="modal" data-target="#trip-modal-gear">
    <div class="trip-edit">
      <p>Enter Gear Details</p>
    </div>
</a>
<div id="trip-modal-gear" class="modal fade" role="dialog">
  <div class="modal-dialog">

    <!-- Modal content-->
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">&times;</button>
        <h4 class="modal-title">Edit Your Trip</h4>
      </div>
      <div class="modal-body">
        <%= form_for @trip do |f| %>
          <%= f.label :bike, 'Enter The bike you used on this trip' %>
          <%= f.text_field :bike, :class => "form-control" %>
          <%= f.label :gear_list, "Enter any other gear you used" %>
          <%= f.text_area :gear_list, class: "form-control" %>
      </div>
      <div class="modal-footer">
          <%= f.submit "Submit", :class => "btn btn-submit" %>
      <% end %>
      </div>
    </div>
  </div>
</div>
