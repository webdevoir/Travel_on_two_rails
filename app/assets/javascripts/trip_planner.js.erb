$(function(){

  $(".trip-planner-sidebar-item").on("click", function(){
    var lat = $(this).data("lat")
    var lng = $(this).data("lng")
    newLocation(lat, lng)
  })

  function initMap() {
    var directionsService = new google.maps.DirectionsService;
    var directionsDisplay = new google.maps.DirectionsRenderer;
    // setting as global scope which might be bad
    map = new google.maps.Map(document.getElementById('map-trip-planner'), {
      zoom: 7,
    });
    // directionsDisplay.setMap(map);
    directionsDisplay.setPanel(document.getElementById('right-panel'));

    calculateAndDisplayRoute(directionsService, directionsDisplay, map);
  }

  function calculateAndDisplayRoute(directionsService, directionsDisplay, map) {
    var id = $("#trip_id").val()
    $.ajax({
      url: "/trips/"+id+"/fetch_posts",
    }).done(function(result){
      var posts_unsorted = result.posts
      var trip = result.trip
      var posts = sortPosts(posts_unsorted)
      for (var i = 0; i < posts.length; i++) {
        createDirections(posts[i], directionsService, directionsDisplay, map)
      }
    })
  }

  function sortPosts(posts){
    var all_posts = []
    var array = []
    var last_point = ""
    for (var i = 0; i < posts.length; i++) {
      var last_point_boolean = last_point === posts[i].address1
      last_point = posts[i].address2
      if ( (i + 1) % 23 === 0 ) {
        all_posts.push(array)
        array = []
        if (i === posts.length - 1 ) {
          array.push(posts[i])
          all_posts.push(array)
        } else {
          array.push(posts[i])
        }
      } else if (last_point_boolean || i === 0) {
        array.push(posts[i])
      } else {
        all_posts.push(array)
        array = []
        if (i === posts.length - 1 ) {
          array.push(posts[i])
          all_posts.push(array)
        } else {
          array.push(posts[i])
        }
      }
    }
    return all_posts
  }

  function createDirections(posts, directionsService, directionsDisplay, map) {
    var waypts = []
    var last_point = ""
    for (var i = 0; i < posts.length; i++) {
      var last_point_boolean = last_point === posts[i].address1
      last_point = posts[i].address2
      if (i === 0 ) {
        if (posts.length === 1) {
          var start = posts[i].address1
          var end = posts[i].address2
        } else {
          var start = posts[i].address1
          waypts.push({
            location: posts[i].address2,
            stopover: true
          });
        }
      } else if ( i === posts.length - 1 ) {
        var end = posts[i].address2
        if (!last_point_boolean) {
          waypts.push({
            location: posts[i].address1,
            stopover: true
          });
        }
      } else {
        if (last_point_boolean) {
          waypts.push({
            location: posts[i].address2,
            stopover: true
          });
        } else {
          waypts.push({
            location: posts[i].address1,
            stopover: true
          });
          waypts.push({
            location: posts[i].address2,
            stopover: true
          });
        }
      }
    }
    directionsService.route({
      origin: start,
      destination: end,
      waypoints: waypts,
      optimizeWaypoints: true,
      travelMode: 'DRIVING',
      unitSystem: google.maps.UnitSystem.METRIC
    }, function(response, status) {
      if (status === 'OK') {
        renderDirections(response, map);
        var infowindow = []
        for (var i = 0; i < response.routes[0].legs.length; i++) {
          infowindow[i] = new google.maps.InfoWindow();
          var legs = response.routes[0].legs[i]
          var distance = google.maps.geometry.spherical.interpolate(legs.start_location, legs.end_location, 0.5);
          createMarker(map, distance, "label", "html")
          // infowindow[i].setContent(legs.steps[0].distance.text + "<br>" + legs.steps[0].duration.text + " ");
          // infowindow[i].setPosition(legs.steps[0].path[0]);
          // infowindow[i].open(map);
        }
      } else {
        window.alert('Directions request failed due to ' + status);
      }
    });
  }

  function renderDirections(result, map) {
    var directionsRenderer = new google.maps.DirectionsRenderer();
    directionsRenderer.setMap(map);
    directionsRenderer.setDirections(result);
  }

  function createMarker(map, latlng, label, html) {
    var contentString = '<b>'+label+'</b><br>'+html;
    var marker = new google.maps.Marker({
        position: latlng,
        map: map,
        title: label,
        zIndex: Math.round(latlng.lat()*-100000)<<5
        });
        marker.myname = label;

    google.maps.event.addListener(marker, 'click', function() {
        infowindow.setContent(contentString+"<br>"+marker.getPosition().toUrlValue(6));
        infowindow.open(map,marker);
        });
    return marker;
  }

  function newLocation(newLat,newLng) {
  	map.setCenter({
  		lat : newLat,
  		lng : newLng
  	});
    map.setZoom(9)
  }

  initMap()
})
